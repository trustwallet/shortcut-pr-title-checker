{
  "name": "shortcut-pr-validator",
  "version": "1.1.1",
  "description": "GitHub Action to validate PR titles against Shortcut ticket numbers",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "github-action",
    "shortcut",
    "pr-validation",
    "ticket-validation"
  ],
  "author": "TWallet Team",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.6"
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm test",
      "npm run build"
    ]
  }
}
